; Assembler

; *****************
; Memory Reference
; *****************
; #00 -> EOF
; #01 -> char
; #02 -> isComment

S 0
- 1
G 0     ;sets EOF(-1) to #00

; while register != EOF:
    ;___MainLoop
    R
    = $0
    J 00    ;JumpTo:___ShouldRead
    J 00    ;JumpTo:___End
    ;___ShouldRead
    G 1     ; char = register


    ; ******** Reading EOL to exit comments and finnish instruction ********
    ; if register == '\n':
    = 10
    J 00    ;JumpTo:___IsNotEOL
        S 0     ; register = false
        G 2     ; isComment = false
        S $1    ; register = char
    ;___IsNotEOL


    ; ******** Skipping readind if is inside a comment ********
    ; if isComment:
    S $2
    = 1
    J 00    ;JumpTo:___ShouldNotSkipChar
        J 00    ;JumpTo:___MainLoop
    ;___ShouldNotSkipChar
    S $1    ; restores register value


    ; ******** Entering comment mode ************
    ; if register == ';':
    = 59
    J 00    ;JumpTo:___IsNotComment
        S 1     ; register = true
        G 2     ; isComment = true
        S $1    ; register = char
        J 00    ;JumpTo:___MainLoop
    ;___IsNotComment


    W   ;Writes char to stdout (debug)


    J 00    ;JumpTo:___MainLoop


;___End
